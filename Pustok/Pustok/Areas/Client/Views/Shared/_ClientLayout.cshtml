@inject IUserService userService;

<!DOCTYPE html>
<html lang="zxx">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Pronia - Plant Store Bootstrap 5 Template</title>
    <meta name="robots" content="index, follow" />
    <meta name="description"
          content="Pronia plant store bootstrap 5 template is an awesome website template for any home plant shop." />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Favicon -->
    <link rel="shortcut icon"
          type="image/x-icon"
          href="~/client/assets/images/favicon.ico" />

    <!-- CSS
    ============================================ -->



    <link rel="stylesheet" href="~/client/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/client/assets/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/client/assets/css/Pe-icon-7-stroke.css" />
    <link rel="stylesheet" href="~/client/assets/css/animate.min.css" />
    <link rel="stylesheet" href="~/client/assets/css/swiper-bundle.min.css" />
    <link rel="stylesheet" href="~/client/assets/css/nice-select.css" />
    <link rel="stylesheet" href="~/client/assets/css/magnific-popup.min.css" />
    <link rel="stylesheet" href="~/client/assets/css/ion.rangeSlider.min.css" />

    @RenderSection("custom_plugin_styles", false)

    <!-- Style CSS -->
    <link rel="stylesheet" href="~/client/assets/css/style.css" />

    @RenderSection("custom_styles", false)
</head>

<body>
    <div class="preloader-activate preloader-active open_tm_preloader">
        <div class="preloader-area-wrap">
            <div class="spinner d-flex justify-content-center align-items-center h-100">
                <div class="bounce1"></div>
                <div class="bounce2"></div>
                <div class="bounce3"></div>
            </div>
        </div>
    </div>
    <div class="main-wrapper">
        <partial name="Partials/Client/_NavbarPartialView" />

        @RenderBody()

        <partial name="Partials/Client/_ProductDetailsModalPartialView" />

        <!-- Begin Scroll To Top -->
        <a class="scroll-to-top" href="">
            <i class="fa fa-angle-double-up"></i>
        </a>
        <!-- Scroll To Top End Here -->
    </div>

    <!-- Global Vendor, plugins JS -->
    <!-- JS Files
    ============================================ -->

    <script src="~/client/assets/js/vendor/bootstrap.bundle.min.js"></script>
    <script src="~/client/assets/js/vendor/jquery-3.6.0.min.js"></script>
    <script src="~/client/assets/js/vendor/jquery-migrate-3.3.2.min.js"></script>
    <script src="~/client/assets/js/vendor/jquery.waypoints.js"></script>
    <script src="~/client/assets/js/vendor/modernizr-3.11.2.min.js"></script>
    <script src="~/client/assets/js/plugins/wow.min.js"></script>
    <script src="~/client/assets/js/plugins/swiper-bundle.min.js"></script>
    <script src="~/client/assets/js/plugins/jquery.nice-select.js"></script>
    <script src="~/client/assets/js/plugins/parallax.min.js"></script>
    <script src="~/client/assets/js/plugins/jquery.magnific-popup.min.js"></script>
    <script src="~/client/assets/js/plugins/tippy.min.js"></script>
    <script src="~/client/assets/js/plugins/ion.rangeSlider.min.js"></script>
    <script src="~/client/assets/js/plugins/mailchimp-ajax.js"></script>
    <script src="~/client/assets/js/plugins/jquery.counterup.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>

    @if (userService.IsAuthenticateed)
    {
        <script src="~/admin/assets/js/notification.js" asp-append-version="true"></script>
    }


    @RenderSection("custom_plugin_scripts", false)

    <!--Main JS (Common Activation Codes)-->
    <script src="~/client/assets/js/main.js"></script>

    @RenderSection("custom_scripts", false)
</body>
</html>
