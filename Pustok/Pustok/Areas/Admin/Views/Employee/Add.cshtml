@model EmployeeViewModel
@{
    Layout = "_AdminLayout";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <p class="text-muted mb-0">Add New Employee.</p>
        </div><!--end card-header-->
        <div class="card-body">
            <form asp-controller="Employee" asp-action="Add" method="POST">
                <div class="form-group">
                    <label asp-for="Name">Employee Name:</label>
                    <input asp-for="Name" type="text" class="form-control" id="employeeName" placeholder="Enter employee name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Surname">Employee Surname:</label>
                    <input asp-for="Surname" type="text" class="form-control" id="employeeSurname" placeholder="Enter employee surname">
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FatherName">Father's Name:</label>
                    <input asp-for="FatherName" type="text" class="form-control" id="fatherName" placeholder="Enter father's name">
                    <span asp-validation-for="FatherName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Pin">PIN:</label>
                    <input asp-for="Pin" type="text" class="form-control" id="pin" placeholder="Enter PIN">
                    <span asp-validation-for="Pin" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email">Email:</label>
                    <input asp-for="Email" type="text" class="form-control" id="employeeEmail" placeholder="Enter email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="DepartmentId">Department:</label>
                    <select asp-for="DepartmentId" id="employeeDepartment" class="form-control">
                        @foreach (var department in Model.Departments)
                        {
                            <option value="@department.Id">@department.Name</option>
                        }
                    </select>
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Add Employee</button>
            </form>
        </div><!--end card-body-->
    </div><!--end card-->
</div>
