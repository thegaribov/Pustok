@model List<User>
@inject IUserService userService
@{
    Layout = "_AdminLayout";
}

<div class="col-sm-12">
    <!-- ... (unchanged) ... -->
</div>

<div class="col-lg-12">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div>
                <h4 class="card-title">Users</h4>
                <p class="text-muted mb-0">
                    <!-- ... (unchanged) ... -->
                </p>
            </div>
            <a asp-controller="User" asp-action="Add" class="btn btn-success">Add user</a>
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive">
                <table users class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th></th>
                            <th class="text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr data-id="@user.Id" >
                                <td>@user.Name</td>
                                <td>@user.LastName</td>
                                <td>@user.Email</td>
                                <td user-status >
                                    @if (userService.IsOnline(user.Id))
                                    {
                                        <span class="badge badge-soft-success">Online</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-soft-danger">Offline</span>
                                    }
                                </td>
                                <td>
                                    @if (user.UserRoles.Any())
                                    {
                                        foreach (var userRole in user.UserRoles)
                                        {
                                            <span class="badge badge-soft-success">@userRole.Role.ToString()</span>
                                        }
                                    }
                                </td>
                                <td class="text-end">
                                    @if (!userService.IsUserSeeded(user))
                                    {
                                        <a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id">
                                            <i class="las la-pen text-secondary font-16"></i>
                                        </a>
                                        <a asp-controller="User" asp-action="Delete" asp-route-id="@user.Id">
                                            <i class="las la-trash-alt text-secondary font-16"></i>
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div> <!-- end col -->

@section custom_scripts{

    <script src="~/admin/assets/js/users-page-hub.js" asp-append-version="true"></script>
}
