@model Product
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>Edit Product</title>
</head>
<body>
    <div class="container">
        <h2>Edit Product</h2>
        <form action="~/admin/EditSubmitProduct?id=@Model.Id" method="POST">
            <div class="form-group">
                <label for="productName">Product Name:</label>
                <input disabled="" name="name" value="@Model.Name" type="text" class="form-control" id="productName" placeholder="Enter product name">
            </div>
            <div class="form-group">
                <label for="productPrice">Price:</label>
                <input name="price" value="@Model.Price" type="text" class="form-control" id="productPrice" placeholder="Enter price">
            </div>
            <div class="form-group">
                <label for="productRating">Rating:</label>
                <input name="rating" value="@Model.Rating" type="text" class="form-control" id="productRating" placeholder="Enter rating">
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</body>
</html>
